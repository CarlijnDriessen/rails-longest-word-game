<div class="container">
  <ul class="list-group list-group-horizontal">
    <% @letters.each do |letter| %>
    <li class="list-group-item"><%= letter %></li>
    <% end %>
  </ul>
  <p>What's the longest word you can find?</p>
  <form action="/score" method="POST" data-turbo="false">
    <input type="text" value="" name="attempt">
    <input type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start_time, @start_time %>
  </form>
</div>

